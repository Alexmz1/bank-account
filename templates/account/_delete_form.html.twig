<form method="post" action="{{ path('app_account_delete', {'id': account.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce compte ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ account.id) }}">
    <button class="btn btn-secondary rounded-md text-white mt-4">Supprimer</button>
</form>
