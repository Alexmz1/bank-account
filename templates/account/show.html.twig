{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ account.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ account.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ account.lastName }}</td>
            </tr>
            <tr>
                <th>BankName</th>
                <td>{{ account.bankName }}</td>
            </tr>
            <tr>
                <th>BankAccountNumber</th>
                <td>{{ account.bankAccountNumber }}</td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ account.iban }}</td>
            </tr>
            <tr>
                <th>AccountType</th>
                <td>{{ account.accountType.value }}</td>
            </tr>
            <tr>
                <th>BankBalance</th>
                <td>{{ account.bankBalance }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ account.createdAt ? account.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ account.updatedAt ? account.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_account_index') }}">back to list</a>

    <a href="{{ path('app_account_edit', {'id': account.id}) }}">edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
