{% extends 'base.html.twig' %}

{% block title %}Modifier mon compte utilisateur{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@1.4.6/dist/full.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
            <label for="{{ form.firstName.vars.id }}" class="block text-sm font-medium text-gray-900">Pr√©nom</label>
            {{ form_widget(form.firstName, {
                'attr': {'class': 'mt-2 block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-primary sm:text-sm'}
            }) }}
            </div>
            <div>
            <label for="{{ form.lastName.vars.id }}" class="block text-sm font-medium text-gray-900">Nom</label>
            {{ form_widget(form.lastName, {
                'attr': {'class': 'mt-2 block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-primary sm:text-sm'}
            }) }}
            </div>
        </div>
        <div>
            <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-900">Email</label>
            {{ form_widget(form.email, {
                'attr': {'class': 'mt-2 block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-primary sm:text-sm'}
            }) }}
        </div>
        <div>
            <label for="{{ form.profilePicture.vars.id }}" class="block text-sm/6 font-medium text-gray-900">Photo de profil (optionnel)</label>
            {{ form_widget(form.profilePicture, {
            'attr': {'class': 'hidden', 'accept': 'image/*', 'onchange': 'updateFileName(this)'},
            'type': 'file'
            }) }}
            <label id="file-label" for="{{ form.profilePicture.vars.id }}" class="mt-2 block w-full cursor-pointer rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 text-center outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-secondary sm:text-sm/6">
            Choisir un fichier
            </label>
        </div>
        <script>
            function updateFileName(input) {
            var fileName = input.files[0] ? input.files[0].name : 'Choisir un fichier';
            document.getElementById('file-label').textContent = fileName;
            }
        </script>
        <div>
            <button type="submit" class="flex w-full justify-center rounded-md btn btn-secondary text-white">Confirmer</button>
        </div>
        <a href="{{ path('app_user_index') }}" class="btn btn-primary rounded-md text-white mt-4">Retourner sur mon profil</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
