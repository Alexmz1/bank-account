{% extends 'base.html.twig' %}

{% block title %} Investissement {{ app.user.firstName }} {{ app.user.lastName }}{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@1.4.6/dist/full.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="flex min-h-screen bg-gray-100">

    {% include 'parts/left_bar.html.twig' with {'class': 'w-1/6'} %}

    <!-- Main Content -->
    <div class="flex-1 p-6 overflow-x-auto">
        <h2 class="text-2xl font-bold mb-4 text-center">Recommandations d'investissement du jour</h2>
    
        {% if recommendations is not empty %}
            <ul class="list-disc pl-6">
                {% for recommendation in recommendations %}
                    <li class="text-gray-700">{{ recommendation }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-center">Aucune recommandation disponible pour aujourd'hui.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
