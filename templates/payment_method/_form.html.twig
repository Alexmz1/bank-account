{% extends 'base.html.twig' %}

{% block title %}Méthode de paiement{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@1.4.6/dist/full.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div>
                <label for="{{ form.name.vars.id }}" class="block text-sm/6 font-medium text-gray-900">Nom</label>
                {{ form_widget(form.name, {
                    'attr': {'class': 'mt-2 block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-primary sm:text-sm/6'}
                }) }}
            </div>
            <div>
                <button type="submit" class="flex w-full justify-center rounded-md btn btn-secondary text-white">Confirmer</button>
            </div>
            <a href="{{ path('app_payment_method_index') }}" class="btn btn-primary rounded-md text-white mt-4">Retourner à la liste</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
