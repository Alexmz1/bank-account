{% extends 'base.html.twig' %}

{% block title %}Méthodes de paiement{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@1.4.6/dist/full.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="flex min-h-screen bg-gray-100">

        {% include 'parts/left_bar.html.twig' %}

        <!-- Main Content -->
        <div class="flex-1 p-6">
            <h1 class="text-2xl font-bold mb-4">Ajouter une méthode de paiement</h1>
            <form action="#" method="post" class="space-y-4">
            <div>
                <label for="name" class="block text-sm/6 font-medium text-gray-900">Nom</label>
                <div class="mt-2">
                <input type="text" name="name" id="name" class="block w-full rounded-md border border-gray-300 bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-secondary sm:text-sm/6">
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary rounded-md text-white">Ajouter</button>
            </div>
            </form>
        </div>
        <div class="flex-1 p-6">
            <h1 class="text-2xl font-bold mb-4">Mes méthodes de paiement</h1>
            <div class="overflow-x-auto">
                <table class="table w-full mx-auto">
                    <thead>
                        <tr>
                            <th class="w-1/2">Nom</th>
                            <th class="w-1/2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if paymentMethods is not empty %}
                            {% for paymentMethod in paymentMethods %}
                                <tr>
                                    <td>{{ paymentMethod.name }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary rounded-md text-white">Modifier</a>
                                        <a href="#" class="btn btn-secondary rounded-md text-white">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="2" class="text-center">Aucune méthode de paiement trouvée.</td>
                            </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}